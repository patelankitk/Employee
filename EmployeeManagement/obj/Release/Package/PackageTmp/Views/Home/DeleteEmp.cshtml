@model EmployeeManagement.Models.tblEmp1

@{
    ViewBag.Title = "DeleteEmp";
}

<div class="Index">
<h2 class="text-center">Delete Employee</h2>

<h3 class="text-center">Are you sure you want to delete this?</h3>
<div>
    <h4 class="text-center">Employee</h4>

    @if (@Model.EmpPhoto == null || @Model.EmpPhoto == "")
    {
    <p class="text-center">@Model.EmpName image not available.</p>
    }
    else
    {
    <p class="text-center"><img class="EmpImg" src="@Url.Content(@Model.EmpPhoto)" alt="@Model.EmpName" /></p>

    }

       <table class="table">
        <tr>
            <td><p class="tab-content">@Html.LabelFor(model => model.EmpID, "Employee ID:")</p></td>
            <td><p class="tab-content">@Html.DisplayFor(model => model.EmpID)</p></td>
        </tr>

        <tr>
            <td><p class="tab-content">@Html.LabelFor(model => model.EmpName, "Name:")</p></td>
            <td><p class="tab-content">@Html.DisplayFor(model => model.EmpName)</p></td>
        </tr>

        <tr>
            <td><p class="tab-content">@Html.LabelFor(model => model.EmpDOB, "Date of Birth:")</p></td>
            <td><p class="tab-content">@Html.DisplayFor(model => model.EmpDOB)</p></td>
        </tr>

        <tr>
            <td><p class="tab-content">@Html.LabelFor(model => model.EmpGender, "Gender:")</p></td>
            <td><p class="tab-content">@Html.DisplayFor(model => model.EmpGender)</p></td>
        </tr>

        <tr>
            <td><p class="tab-content">@Html.LabelFor(model => model.EmpEmail, "Email:")</p></td>
            <td><p class="tab-content">@Html.DisplayFor(model => model.EmpEmail)</p></td>
        </tr>

        <tr>
            <td><p class="tab-content">@Html.LabelFor(model => model.EmpContactNo, "Contact No")</p></td>
            <td><p class="tab-content">@Html.DisplayFor(model => model.EmpContactNo)</p></td>
        </tr>


        <tr>
            <td><p class="tab-content">@Html.LabelFor(model => model.EmpDeptName, "Department Name")</p></td>
            <td><p class="tab-content">@Html.DisplayFor(model => model.EmpDeptName)</p></td>
        </tr>

        <tr>
            <td><p class="tab-content">@Html.LabelFor(model => model.EmpSalary, "Salary")</p></td>
            <td><p class="tab-content">@Html.DisplayFor(model => model.EmpSalary)</p></td>
        </tr>
                
    </table>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

            <p class="text-center">@Html.ActionLink("Back to List", "Details", new { name = Model.EmpDeptName })
        <input type="submit" value="Delete" class="btn btn-primary tab-content" /> </p>
        <br />

    }
</div>
    </div>
