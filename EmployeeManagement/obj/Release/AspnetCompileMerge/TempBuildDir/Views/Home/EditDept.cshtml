@model EmployeeManagement.Models.tblDept

@{
    ViewBag.Title = "EditDept";
}

<div class="Index">
<h2 class="text-center">EditDept</h2>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <h4 class="text-center">Edit Department</h4>
    <div class="form-group">
    <table class="table">
        @Html.HiddenFor(model => model.DeptID)
        <tr>
            <td><p class="tab-content">@Html.LabelFor(model => model.DeptName, "Department Name")</p></td>
            <td><p class="tab-content">@Html.EditorFor(model => model.DeptName)</p></td>
        </tr>
    </table>
    </div>

    <div class="form-group">
        <p class="text-center">
            @Html.ActionLink("Back to List", "Index") 
            <input type="submit" value="Save" class="btn btn-primary tab-content" /> 
        </p>

    </div>

}
</div>